# Modern SSH client configuration for Ubuntu 24.04/25.04

# Global settings
Host *
    # Enable agent forwarding (use with caution)
    ForwardAgent yes

    # Use modern, secure ciphers only
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr

    # Modern key exchange algorithms
    KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256

    # Modern MACs
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha2-512,hmac-sha2-256

    # Modern host key algorithms
    HostKeyAlgorithms ssh-ed25519,ssh-ed25519-cert-v01@openssh.com,sk-ssh-ed25519@openssh.com,rsa-sha2-512,rsa-sha2-256

    # Connection keepalive
    TCPKeepAlive no
    ServerAliveInterval 60
    ServerAliveCountMax 10

    # Connection multiplexing for performance
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h:%p
    ControlPersist 600

    # Compression
    Compression yes

    # Identity files
    IdentityFile ~/.ssh/id_ed25519
    IdentityFile ~/.ssh/id_rsa

# Example host-specific configuration
# Host example
#     HostName example.com
#     User username
#     Port 22
#     IdentityFile ~/.ssh/id_example
